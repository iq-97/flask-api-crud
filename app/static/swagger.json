{
  "openapi": "3.0.0",
  "info": {
    "description": "api rest hecha en flask",
    "version": "1.0.0",
    "title": "prueba api de flask"
  },
  "servers": [
    {
      "description": "Url local de pruebas",
      "url": "http://localhost:3200/"
    }
  ],
  "tags": [
    {
      "name": "Personas",
      "description": "Personas"
    }
  ],
  "paths": {
    "/personas": {
      "get": {
        "tags": [
          "Personas"
        ],
        "summary": "get personas",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Operacion exitosa"
          }
        }
      },
      "post": {
        "tags": [
          "Personas"
        ],
        "summary": "Crear un cliente",
        "description": "Crear un cliente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/personas"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "operacion exitosa"
          },
          "401": {
            "description": "Usuario sin autorizaci√≥n"
          }
        }
      }
    },
     "/personas/{id}": {
      "get": {
        "tags": [
          "Personas"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id de registro",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Opeeracion exitosa"
          },
          "400": {
            "description": "Id Invalido"
          },
          "404": {
            "description": "registro No encontrado"
          }
        }
      },
      "put": {
        "tags": [
          "Personas"
        ],
        "summary": "Modificar registro",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id de registro",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "objeto de la entidad a actualizar",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/personas"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "Id invalido"
          },
          "404": {
            "description": "registro no encontrado"
          }
        }
      },
      "delete": {
        "tags": [
          "Personas"
        ],
        "summary": "Eliminar",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "El id de registro a ser eliminado",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "400": {
            "description": "id invalido"
          },
          "404": {
            "description": "id no encontrado"
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "description": "pegar unicamente el token generado en el login, \"Bearer\" se concatenara automaticamente",
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "personas": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          }
        }
      }
    }
  }
}